    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^8.54.0",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
